<%= @category.name %>
<%= link_to "Add recipe", new_category_bookmark_path(@category) %>
<% @category.bookmarks.each do |bookmark| %>
  <%= bookmark.recipe.name %>
  <%= link_to "|Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
<% end %>
